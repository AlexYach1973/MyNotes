<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>

        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>

    </style>

<!--     Custom styles-->
<!--        Цвет точек меню в своем ToolBar-->
    <style name="actionOverflowButtonStyle"
        parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/purple_700</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/purple_700</item>
    </style>

</resources>